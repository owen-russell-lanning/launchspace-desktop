<UserControl x:Class="launchspace_desktop.pages.LaunchersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launchspace_desktop.pages" xmlns:components="clr-namespace:launchspace_desktop.components"
             mc:Ignorable="d" 
             d:MinHeight="450" d:MinWidth="800">
    <StackPanel Margin="20,0,0,0">
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <components:HorizontalTextImageButton x:Name="newLauncherButton"></components:HorizontalTextImageButton>
            <components:HorizontalTextImageButton x:Name="editModeButton"></components:HorizontalTextImageButton>
        </StackPanel>
        <WrapPanel x:Name="launchersDisplay">
            <components:ListLabel >No Launchers Found</components:ListLabel>
        </WrapPanel>
    </StackPanel>
</UserControl>
